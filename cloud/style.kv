<WeatherScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"
        MDTopAppBar:
            title: "LCloud"
            right_action_items: [["dots-vertical", lambda x: app.callback]]
        MDBoxLayout:
            spacing: "10sp"
            size_hint: 0.9, 0.4
            pos_hint: {'center_x': 0.5}
            MDTextField:
                id: city
                hint_text: "Input your city"
                mode: "fill"
                
            MDIconButton:
                id: search_btn
                on_press: root.search()
                icon: "search-web"
                icon_size: "32sp"
                mb_bg_color: app.theme_cls.primary_color
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.9, 0.4
            MDLabel:
                id: temp
                text: "14C"
                font_style: "H4"
                halign: "center"

            MDLabel:
                id: desc
                text: "Ясно"
                font_style: "H4"
                halign: "center"


            